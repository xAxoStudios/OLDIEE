{{! Filter Categories }}
<ul class="relative z-10 items-start md:items-stretch flex flex-col py-4 md:py-0 md:flex-row md:gap-x-6 lg:gap-x-12 xl:gap-x-9">
  {{#each cats}}
    <li class="flex {{#if is-active}}after:absolute after:h-0.5 md:after:bottom-0 after:bottom-0.5 after:bg-accent after:inset-x-0 relative{{/if}}">
      <a
        class="flex items-center py-1 font-bold transition-all hover:text-primary dark:hover:text-white hover:opacity-100 text-sm lg:text-base {{#if is-active}}opacity-100 text-primary dark:text-white dark:lg:text-white {{else}}text-gray-500/60{{/if}}"
        href="#"
      >
        {{label}}
      </a>
    </li>
  {{/each}}
</ul>
{{! Filter Categories / End }}
