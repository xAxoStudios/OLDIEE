{{! Header }}
<header
  class="relative isolate min-h-[540px] overflow-hidden bg-gray-900 bg-cover bg-center bg-no-repeat md:min-h-[600px] lg:min-h-[720px] xl:min-h-[800px]"
>

  {{! Left Side }}
  <div class="absolute inset-y-0 left-0 -z-[5] w-1/2 bg-primary"></div>
  {{! Left Side / End }}

  {{! Right Side }}
  <div class="absolute inset-y-0 right-0 -z-[5] w-1/2 bg-secondary"></div>
  {{! Right Side / End }}

  {{! Center }}
  <div
    class="absolute inset-y-0 left-1/2 -z-[4] w-[1300px] -translate-x-1/2 bg-gray-900"
  ></div>
  {{! Center / End }}

  {{! Left Decoration }}
  <svg
    xmlns="http://www.w3.org/2000/svg"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    class="absolute left-1/2 -z-[3] aspect-[659/800] w-[659px] -translate-x-[calc(100%+300px)] fill-primary"
    viewBox="0 0 659 800"
  >
    <path
      fill-rule="evenodd"
      d="M511.064,-13.773 L390.524,507.232 L658.1000,512.717 L574.074,849.999 L-192.1000,849.999 L-192.1000,-21.1000 L511.064,-13.773 Z"
    ></path>
  </svg>
  {{! Left Decoration / End }}

  {{! Right Decoration }}
  <svg
    xmlns="http://www.w3.org/2000/svg"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    class="absolute right-1/2 -z-[3] aspect-[659/800] w-[659px] translate-x-[calc(100%+264px)] fill-secondary"
    viewBox="0 0 659 800"
  >
    <path
      fill-rule="evenodd"
      d="M339.694,-18.999 L144.787,284.668 L381.459,287.453 L-0.000,852.999 L890.1000,852.999 L890.1000,-2.284 L339.694,-18.999 Z"
    ></path>
  </svg>
  {{! Right Decoration / End }}

  <div class="container">

    {{! Header Nav }}
    <header class="grid min-h-[100px] grid-cols-12 items-center gap-x-4">

      {{! Nav }}
      <nav
        class="col-span-4 flex items-center justify-start gap-x-7 md:col-span-8 md:col-start-3 md:justify-center lg:gap-x-8 xl:col-start-4 xl:col-end-10 xl:gap-x-10"
      >
        {{! Nav Left }}
        <ul
          class="hidden w-full justify-end gap-x-5 font-heading text-xs font-bold uppercase md:flex lg:gap-x-6 xl:gap-x-10 [&>li>a]:relative [&>li>a]:inline-block [&>li>a]:text-white after:[&>li>a]:absolute after:[&>li>a]:-bottom-1 after:[&>li>a]:left-0 after:[&>li>a]:h-[2px] after:[&>li>a]:w-full after:[&>li>a]:origin-right after:[&>li>a]:scale-x-0 after:[&>li>a]:bg-white after:[&>li>a]:transition-transform hover:after:[&>li>a]:origin-left hover:after:[&>li>a]:scale-x-100"
        >
          <li><a class="" href="index.html">Home</a></li>
          <li><a href="#section-demo-pages">Demo Pages</a></li>
        </ul>
        {{! Nav Left / ENd }}

        {{! Logo }}
        <div class="shrink-0">
          <div
            class="relative inline-flex aspect-square w-[44px] items-center justify-center overflow-hidden rounded-full bg-gray-900"
          >
            {{! Decorations }}
            <div class="absolute inset-0 aspect-square w-[44px] rotate-[30deg]">
              <div
                class="absolute left-0 top-0 aspect-square h-full w-1/2 bg-primary"
              ></div>
              <div
                class="absolute right-0 top-0 aspect-square h-full w-1/2 bg-secondary"
              ></div>
            </div>
            {{! Decorations / End }}

            {{! "V" }}
            <svg
              class="relative aspect-[37/36] w-6 fill-white"
              viewBox="0 0 37 36"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M17 16L15 29.001L27 10.001H21L27.363 0H37L25 36H13L0 0H13L11 16H17Z"
              ></path>
            </svg>
            {{! "V" / End }}
          </div>
        </div>
        {{! Logo / End }}

        {{! Nav Right }}
        <ul
          class="hidden w-full gap-x-5 font-heading text-xs font-bold uppercase md:flex lg:gap-x-6 xl:gap-x-10 [&>li>a]:relative [&>li>a]:inline-block [&>li>a]:text-white after:[&>li>a]:absolute after:[&>li>a]:-bottom-1 after:[&>li>a]:left-0 after:[&>li>a]:h-[2px] after:[&>li>a]:w-full after:[&>li>a]:origin-right after:[&>li>a]:scale-x-0 after:[&>li>a]:bg-white after:[&>li>a]:transition-transform hover:after:[&>li>a]:origin-left hover:after:[&>li>a]:scale-x-100"
        >
          <li><a href="#section-features">Features</a></li>
          <li><a
              href="http://docs.dan-fisher.com/docs/valkivid-html/"
            >Documentation</a></li>
        </ul>
        {{! Nav Left / End}}
      </nav>
      {{! Nav / End }}

      {{! Download Button }}
      <div class="col-span-8 justify-self-end md:col-span-2 md:col-start-11">
        <a
          href="{{landing.purchase}}"
          class="inline-flex bg-primary px-4 py-3 font-heading text-xs font-bold uppercase leading-none text-white shadow-2xl transition-colors hover:bg-white hover:text-gray-900 xl:px-5 xl:py-4"
        >
          <span class="xl:hidden">Download</span>
          <span class="hidden xl:block">Download it now!</span>
        </a>
      </div>
      {{! Download Button / End }}

    </header>
    {{! Header Nav / End }}

    {{! Hero }}
    <div
      class="grid grid-cols-12 gap-x-4 pt-10 md:pt-16 lg:pt-24 xl:pt-[120px]"
    >
      <div
        class="relative col-span-full flex flex-col items-center md:col-span-8 md:col-start-3"
      >
        {{! Ballon }}
        <div
          class="rellax absolute -left-10 -top-8 hidden aspect-square w-20 place-items-center rounded-full bg-quinary text-center text-white after:absolute after:-right-2 after:bottom-3 after:h-0 after:w-0 after:-rotate-[52deg] after:border-l-[12px] after:border-r-[12px] after:border-t-[20px] after:border-t-quinary after:border-l-transparent after:border-r-transparent sm:grid lg:left-0 lg:-top-12 lg:w-[108px]"
          data-rellax-speed="1"
          data-rellax-percentage="1"
        >
          <div>
            <div
              class="font-heading text-xl font-black uppercase leading-none lg:text-[28px]"
            >HTML</div>
            <div
              class="font-heading text-xs font-semibold uppercase leading-snug lg:text-sm"
            >version</div>
          </div>
        </div>
        {{! Ballon / End  }}

        {{! Subtitle }}
        <div
          class="mb-1 font-heading text-xl font-light uppercase text-white sm:mb-2 lg:mb-5 lg:text-2xl"
        >Tailwind CSS Template</div>
        {{! Subtitle / End }}

