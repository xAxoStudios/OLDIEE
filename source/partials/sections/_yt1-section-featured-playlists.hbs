{{! Section: Featured Playlists }}
<section class="py-14 pb-7 md:py-32 md:pb-16 lg:py-44 lg:pb-20 xl:py-48 xl:pb-24">
  <div class="container">
    {{> _yt1-section-heading title="Featured Playlists" subtitle="Unbox vlogs" isCentered="true" }}
  </div>

  {{! Playlist Slider }}
  <div class="swiper js-vv-playlist-swiper aspect-square sm:aspect-[5/3] md:aspect-[5/3] lg:aspect-[2/1] xl:aspect-[5/2] mb-6 md:mb-10 lg:mb-16 xl:mb-24">

    {{! Slider required wrapper }}
    <div class="swiper-wrapper">
      {{! Slides }}
      {{#each yt1.playlists}}
        <div class="swiper-slide group">
          <a class="flex h-full" href="{{url}}">
            <img
              class="w-full h-full object-cover"
              src="{{root}}{{cover}}"
              alt="{{title}}"
            />

            {{! Info }}
            <div class="absolute left-7 w-1/2 md:w-1/2 lg:w-2/5 xl:w-1/3 bottom-6 z-10 text-white">
              <h3 class="text-1.5xl font-bold leading-tighter mb-2">{{title}}</h3>
              <div class="text-sm leading-tight">{{count}} videos</div>
            </div>
            {{! Info / End }}

            {{! Overlay }}
            <div class="absolute inset-x-0 bottom-0 h-3/4 bg-gradient-to-t from-gray-900/90 to-transparent transition-all opacity-100 group-hover:opacity-0"></div>
            <div class="absolute inset-x-0 bottom-0 h-3/4 bg-gradient-to-t from-accent/90 to-transparent transition-all opacity-0 group-hover:opacity-100 scale-y-0 group-hover:scale-y-100 origin-bottom duration-200"></div>
            {{! Overlay / End }}
          </a>
        </div>
      {{/each}}
      {{! Slides / End }}
    </div>
    {{! Slider required wrapper / End }}

  </div>
  {{! Playlist Slider / End }}

  {{! Slider Navigation }}
  <div class="container">
    <div class="flex flex-wrap items-center justify-between">
      {{! More Link }}
      <div
        class="inline-flex items-center gap-x-3 text-xs font-bold uppercase text-primary md:text-sm"
      >
        <span
          class="relative inline-flex h-[18px] w-[18px] items-center justify-center rounded-full border-2 border-primary dark:border-white"
        >
          <svg role="img" class="h-[8px] w-[8px] fill-primary dark:fill-white">
            <use xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-right"></use>
          </svg>
        </span>
        <a
          class="text-primary hover:text-accent dark:text-white dark:hover:text-accent"
          href="#"
        >Browse all playlists</a>
      </div>
      {{! More Link / End }}
      {{! Prev/Next }}
      <div class="flex">
        <div
          class="vv-playlist-swiper-btn-prev flex h-[60px] w-[50px] items-center justify-center bg-white text-primary hover:cursor-pointer hover:text-accent dark:bg-gray-900 dark:text-white dark:hover:text-accent"
        >
          <svg class="h-2 w-2" fill="currentColor">
            <use xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-left"></use>
          </svg>
        </div>
        <div
          class="vv-playlist-swiper-btn-next flex h-[60px] w-[50px] items-center justify-center bg-white text-primary hover:cursor-pointer hover:text-accent dark:bg-gray-900 dark:text-white dark:hover:text-accent"
        >
          <svg class="h-2 w-2" fill="currentColor">
            <use xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-right"></use>
          </svg>
        </div>
      </div>
      {{! Prev/Next / End }}
    </div>
  </div>
  {{! Slider Navigation }}

</section>
{{! Section: Featured Playlists / End }}
