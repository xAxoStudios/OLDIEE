          href="https://player.twitch.tv/?video=1703307874&parent=valkivid.dan-fisher.dev"
        >
          <img
            class="aspect-[77/46] w-full object-cover transition-all duration-300 group-hover:scale-110 group-hover:opacity-75"
            src="{{root}}assets/img/str1/samples/video-2-770x460.jpg"
            alt="I Play the Witch Hunters Story Mode!"
          />

          {{! Overlay }}
          <div class="absolute inset-0 bg-black/60"></div>
          {{! Overlay / End }}

          {{! Play Button }}
          <span
            class="absolute top-1/2 left-1/2 flex aspect-square -translate-x-2/4 -translate-y-2/4 items-center justify-center w-10"
          >
            <svg role="img" class="fill-white aspect-[18/22] ml-[2px] w-6">
              <use xlink:href="{{root}}assets/img/yt1/sprite.svg#play"></use>
            </svg>
          </span>
          {{! Play Button / End }}

          {{! Info }}
