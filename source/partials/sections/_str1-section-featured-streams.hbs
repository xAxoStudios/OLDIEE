    }}

    {{! Streams }}
    <div class="grid grid-cols-12 gap-5 md:gap-6 lg:gap-7.5 mb-7.5">

      {{! Primary Stream }}
      <figure class="col-span-full md:row-start-1 md:row-end-2 lg:col-span-8 lg:row-start-1 lg:row-end-3">
        <a
