{{! Section: Featured Videos }}
<section class="">
  <div class="container">
    <div
      class="relative z-30 -mt-20 flex flex-col py-10 md:flex-row md:justify-between lg:-mt-[180px]
        {{filter-class}}"
    >

      <div class="relative">

        {{! Featured Gaming Slider }}
        <div
          class="swiper js-vv-videos-featured-swiper md:w-[1236px] lg:w-[1278px] xl:w-[2068px]"
        >

          {{! Slider required wrapper }}
          <div class="swiper-wrapper">
            {{! Slides }}
            {{#each yt1.videos.featured}}
              <div class="swiper-slide">
                <div>
                  <figure class="mb-6">
                    <a
                      class="glightbox group relative block h-full overflow-hidden bg-gray-900"
                      href="{{url}}"
                    >
                      <img
                        class="aspect-video w-full object-cover transition-all duration-300 group-hover:scale-110 group-hover:opacity-75"
                        src="{{root}}{{thumb.md}}"
                        alt="{{title}}"
                      />

                      <span
                        class="absolute top-1/2 left-1/2 flex aspect-square w-10 -translate-x-2/4 -translate-y-2/4 items-center justify-center rounded-full bg-accent"
                      >
                        <svg role="img" class="ml-[2px] h-4 w-3 fill-white">
                          <use
                            xlink:href="{{root}}assets/img/yt1/sprite.svg#play"
                          ></use>
                        </svg>
                      </span>
                    </a>
                  </figure>
                  <div>
                    <h3
                      class="mb-3 font-bold leading-tight text-primary dark:text-white"
                    >{{title}}</h3>
                    <ul
                      class="flex text-2sm leading-tight tracking-tighter [&>li]:after:mx-1 [&>li:not(:last-child)]:after:content-['-']"
                    >
                      {{#with meta}}
                        <li>
                          {{views}}
                          views
                        </li>
                        <li>
                          {{date}}
                        </li>
                      {{/with}}
                    </ul>
                  </div>
                </div>
              </div>
            {{/each}}
            {{! Slides / End }}
          </div>
          {{! Slider required wrapper / End }}

        </div>
        {{! Featured Gaming Slider / End }}

      </div>

      {{! Slider Navigation }}
      <div
        class="absolute left-0 -top-[10px] z-10 min-[1330px]:-left-20 min-[1330px]:translate-x-0"
      >
        <div class="flex flex-wrap items-center justify-between">
          {{! Prev/Next }}
          <div class="flex">
            <div
              class="js-vv-videos-featured-swiper-btn-prev relative isolate flex h-[50px] w-[40px] items-center justify-center bg-white text-primary before:absolute before:inset-y-0 before:left-0 before:-z-10 before:block before:w-full before:origin-left before:scale-x-0 before:bg-gray-100 before:transition-transform before:duration-300 hover:cursor-pointer hover:text-accent hover:before:origin-right hover:before:scale-x-100 dark:bg-gray-800 dark:text-white dark:before:bg-gray-700 dark:hover:text-accent"
            >
              <svg class="h-[10px] w-[10px]" fill="currentColor">
                <use
                  xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-left"
                ></use>
              </svg>
            </div>
            <div
              class="js-vv-videos-featured-swiper-btn-next relative isolate flex h-[50px] w-[40px] items-center justify-center bg-white text-primary before:absolute before:inset-y-0 before:left-0 before:-z-10 before:block before:w-full before:origin-right before:scale-x-0 before:bg-gray-100 before:transition-transform before:duration-300 hover:cursor-pointer hover:text-accent hover:before:origin-left hover:before:scale-x-100 dark:bg-gray-800 dark:text-white dark:before:bg-gray-700 dark:hover:text-accent"
            >
              <svg class="h-[10px] w-[10px]" fill="currentColor">
                <use
                  xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-right"
                ></use>
              </svg>
            </div>
          </div>
          {{! Prev/Next / End }}
        </div>
      </div>
      {{! Slider Navigation }}

      {{! Background Layer }}
      <div
        class="shadow-3xl absolute inset-y-0 -left-10 -right-full bg-white dark:bg-gray-800 min-[1330px]:-left-20"
      ></div>
      {{! Background Layer / End }}
    </div>
  </div>
</section>
{{! Section: Featured Videos / End }}
