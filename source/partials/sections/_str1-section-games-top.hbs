{{! Top Streamed Games }}
<div class="pb-20 md:pb-24 lg:pb-[120px]">
  <div class="container">

    {{> _str1-section-heading
      title="Top Streamed Games"
    }}

    {{! Top Games }}
    <div
      class="swiper js-vv-games-swiper"
    >

      {{! Slider required wrapper }}
      <div class="swiper-wrapper">
        {{! Slides }}
        {{#each str1.channel.games}}
          <div class="swiper-slide">

            <a class="flex flex-col gap-y-5 group" href="#">
              <figure class="relative overflow-hidden">
                <img class="w-full object-cover aspect-[17/22] transition-transform duration-300 group-hover:scale-110" src="{{root}}{{poster.md}}" alt="{{label}}" />
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-all bg-accent/80 duration-300">
                  <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-7.5 aspect-square bg-gray-900 grid place-items-center text-white scale-90 group-hover:scale-100 transition-all duration-300">
                    <svg class="h-2.5 aspect-square" fill="currentColor">
                      <use xlink:href="{{root}}assets/img/str1/sprite.svg#plus-thinest"></use>
                    </svg>
                  </div>
                </div>
              </figure>
              <div class="leading-tight">
                <h5 class="font-bold text-gray-900 dark:text-white mb-1.5 group-hover:text-accent">{{label}}</h5>
                <div class="text-gray-500">{{count}} Videos</div>
              </div>
            </a>

          </div>
        {{/each}}
        {{! Slides / End }}
      </div>
      {{! Slider required wrapper / End }}

      {{! Prev/Next }}
      <div class="flex justify-center gap-x-3.5 pt-8 sm:pt-10 md:pt-12 lg:pt-16">
        <button
          class="js-vv-games-swiper-btn-prev flex w-8 aspect-square items-center justify-center text-white hover:cursor-pointer hover:text-accent"
        >
          <svg class="h-2.5 w-1.5" fill="currentColor">
            <use xlink:href="{{root}}assets/img/str1/sprite.svg#arrow-left-pixel-alt"></use>
          </svg>
        </button>
        <button
          class="js-vv-games-swiper-btn-next flex w-8 aspect-square items-center justify-center text-white hover:cursor-pointer hover:text-accent"
        >
          <svg class="h-2.5 w-1.5" fill="currentColor">
            <use xlink:href="{{root}}assets/img/str1/sprite.svg#arrow-right-pixel-alt"></use>
          </svg>
        </button>
      </div>
      {{! Prev/Next / End }}

    </div>
    {{! Top Games / End }}
  </div>
</div>
{{! Top Streamed Games / End }}
