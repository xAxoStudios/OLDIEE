  <h3
    class="mb-6 text-2xl font-bold leading-none tracking-tight text-primary dark:text-white lg:mb-24 lg:text-5xl"
  >
    Next Events
  </h3>

  {{> _yt1-event-list events=yt1.events.next}}

</section>
{{! Next Events / End }}

