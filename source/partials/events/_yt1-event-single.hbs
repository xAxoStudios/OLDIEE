{{! Single Event }}
{{#with yt1.events.event}}

  {{! Event Primary }}
  <div class="relative -mt-20 mb-14 lg:-mt-[200px] lg:mb-40">
    <figure
      class="relative mb-8 aspect-[10/5] sm:aspect-auto md:mb-10 lg:mb-14 xl:mb-16"
    >
      <img
        class="h-full w-full object-cover"
        src="{{root}}assets/img/yt1/samples/event-1-1170x240.jpg"
        alt=""
      />
    </figure>

    <div class="grid grid-cols-12 gap-x-2 md:gap-x-[30px]">
      {{#with date}}
        <div
          class="col-start-1 col-end-3 pt-1 text-center md:pt-0 lg:col-end-2"
        >
          <time
            class="flex flex-col items-center text-2xs font-bold uppercase sm:text-xs md:text-base"
            datetime="2022-08-06 21:30"
          >
            <span class="text-accent">{{month}}</span>
            <span
              class="text-xl tracking-tighter text-primary dark:text-white sm:text-2xl md:text-[34px] md:leading-none"
            >{{day}}</span>
          </time>
        </div>
      {{/with}}

      <div class="col-start-3 col-end-13 lg:col-start-2 lg:col-end-12">

        {{! Title }}
        <h1
          class="mb-4 text-xl font-bold tracking-tight text-primary dark:text-white md:mb-5 md:text-2xl lg:mb-8 lg:text-4xl xl:mb-14 xl:text-5xl"
        >
          {{title}}
        </h1>
        {{! Title / End }}

        {{! Excerpt }}
        <div class="lg:text-lg lg:leading-8 lg:tracking-tight">
          <p>{{excerpt}}</p>
        </div>
        {{! Excerpt / End }}

        {{! Details }}
        <ul class="flex flex-wrap gap-y-5 pt-9 lg:pt-14 xl:gap-x-24">
          {{#each details-ext}}
            <li
              class="flex basis-full gap-x-4 leading-tight sm:basis-1/2 xl:basis-auto"
            >
              <div class="lg:pt-1">
                <svg role="img" class="h-6 w-6 fill-primary dark:fill-white">
                  <use
                    xlink:href="{{root}}assets/img/yt1/sprite.svg#{{icon}}"
                  ></use>
                </svg>
              </div>
              <div>
                <h5
                  class="font-bold tracking-tight text-primary dark:text-white md:text-lg md:leading-tight lg:pb-[2px]"
                >{{value}}</h5>
                <span class="text-xs lg:text-sm">{{label}}</span>
              </div>
            </li>
          {{/each}}
        </ul>
        {{! Details / End }}
      </div>

    </div>
  </div>
  {{! Event Primary / End }}

  {{! Event Secondary }}
  <div class="grid grid-cols-12 gap-y-14 gap-x-2 md:gap-x-[30px]">

    {{! Description }}
    <div class="col-span-full md:col-start-2 md:col-end-8">
      {{#> _yt1-widget-base widget-title="Description" }}
        <div
          class="prose max-w-none prose-p:text-gray-500 prose-p:tracking-tighter prose-p:lg:mb-8 prose-p:lg:text-lg prose-p:lg:leading-8"
        >
          {{{description}}}
        </div>

        <div class="pt-8 lg:pt-14 flex flex-wrap gap-4 lg:gap-8">
          {{> _yt1-btn label="Buy Tickets" variant="accent" }}
          {{> _yt1-btn label="+ Google Calendar" variant="primary" }}
        </div>
      {{/_yt1-widget-base }}
    </div>
    {{! Description / End }}

    {{! Sidebar }}
    <aside class="col-span-full md:col-start-9 md:col-end-12">

      {{! Venue Details }}
      {{#> _yt1-widget-base widget-title="Venue Details" widget-class="mb-10 md:mb-12 lg:mb-20"}}
        <ul class="flex flex-col gap-y-6">
          {{#with venue}}
            {{! Venue Title }}
            <li class="flex">
              <div class="basis-10">
                <svg
                  role="img"
                  class="h-6 w-6 fill-primary dark:fill-white"
                >
                  <use xlink:href="{{root}}assets/img/yt1/sprite.svg#venue"></use>
                </svg>
              </div>
              <div class="flex-1">
                <h5 class="font-bold text-primary dark:text-white text-lg leading-tight tracking-tight">{{title.value}}</h5>
                <div class="text-sm">{{title.label}}</div>
              </div>
            </li>
            {{! Venue Title / End }}

            {{! Venue Address }}
            <li class="pl-10">
              <h6 class="font-bold text-primary dark:text-white leading-tight tracking-tight mb-1">{{address.label}}</h6>
              <div class="text-primary dark:text-white">
                {{#each address.value}}
                <p>{{@this}}</p>
                {{/each}}
              </div>
            </li>
            {{! Venue Address / End }}

            {{! Venue Website }}
            <li class="pl-10">
              <h6 class="font-bold text-base text-primary dark:text-white leading-tight tracking-tight mb-1">{{website.label}}</h6>
              <div>
                <a class="text-accent hover:text-primary dark:hover:text-white transition-colors" href="{{website.value.url}}" target="_blank">{{website.value.title}}</a>
              </div>
            </li>
            {{! Venue Website / End }}
          {{/with}}
        </ul>
      {{/_yt1-widget-base }}
      {{! Venue Details / End }}

      {{! Map }}
      {{#> _yt1-widget-base widget-title="Google Map" }}
        <div id="vv-venue-map" class="h-80 w-full"></div>
      {{/_yt1-widget-base }}
      {{! Map / End }}
    </aside>
    {{! Sidebar / End }}

  </div>
  {{! Event Secondary / End }}

{{/with}}
{{! Single Event / End }}
