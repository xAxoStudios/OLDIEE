<div class="flex flex-col gap-y-[30px]">
  {{#each events}}
    <div
      class="flex flex-wrap bg-white dark:bg-gray-800 py-7 pr-7 shadow-3xl lg:py-14 lg:pr-12 xl:pr-14"
    >
      <div class="w-20 text-center md:w-24 lg:w-[140px]">
        <time
          class="flex flex-col items-center text-xs font-bold uppercase md:text-base"
          datetime="2022-08-06 21:30"
        >
          <span class="{{#ifequal status "past"}} text-gray-500 {{else}} text-accent {{/ifequal}}">{{date.month}}</span>
          <span
            class="text-2xl tracking-tighter md:text-[34px] md:leading-none {{#ifequal status "past"}} text-gray-500 {{else}} text-primary dark:text-white {{/ifequal}}"
          >{{date.day}}</span>
        </time>
      </div>
      <div class="flex flex-1 flex-wrap items-center">
        <div class="basis-full lg:basis-7/12 lg:pr-8">
          <h4
            class="mb-3 text-lg font-bold leading-tight tracking-tight md:mb-1 md:text-1.5xl md:leading-tight lg:leading-none"
          >
            <a
              class="text-primary dark:text-white transition-colors hover:text-accent dark:hover:text-accent"
              href="{{url}}"
            >
              {{title}}
            </a>
          </h4>
          <div
            class="text-sm md:text-base lg:tracking-tight xl:text-lg xl:leading-8"
          >
            <p>{{excerpt}}</p>
          </div>
        </div>
        <div class="basis-full lg:basis-5/12">
          <ul class="flex flex-wrap gap-y-5 pt-7 lg:pt-0">
            {{#with details}}
              {{#with place}}
                <li
                  class="flex basis-full gap-x-4 leading-tight sm:basis-1/2 md:basis-1/3 lg:basis-7/12 xl:basis-2/3"
                >
                  <div class="lg:pt-1">
                    <svg role="img" class="h-6 w-6 fill-primary dark:fill-white">
                      <use
                        xlink:href="{{root}}assets/img/yt1/sprite.svg#{{icon}}"
                      ></use>
                    </svg>
                  </div>
                  <div>
                    <h5
                      class="font-bold tracking-tight text-primary dark:text-white md:text-lg md:leading-tight lg:pb-[2px]"
                    >{{value}}</h5>
                    <span class="text-xs lg:text-sm">{{label}}</span>
                  </div>
                </li>
              {{/with}}
              {{#with time}}
                <li
                  class="flex basis-full gap-x-4 leading-tight sm:basis-1/2 md:basis-1/3 lg:basis-5/12 xl:basis-1/3"
                >
                  <div class="lg:pt-1">
                    <svg role="img" class="h-6 w-6 fill-primary dark:fill-white">
                      <use
                        xlink:href="{{root}}assets/img/yt1/sprite.svg#{{icon}}"
                      ></use>
                    </svg>
                  </div>
                  <div>
                    <h5
                      class="font-bold tracking-tight text-primary dark:text-white md:text-lg md:leading-tight lg:pb-[2px]"
                    >{{value}}</h5>
                    <span class="text-xs lg:text-sm">{{label}}</span>
                  </div>
                </li>
              {{/with}}
            {{/with}}
          </ul>
        </div>
      </div>
    </div>
  {{/each}}
</div>
