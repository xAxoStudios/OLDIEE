{{! Title & Filter }}
<div class="flex justify-between items-baseline mb-10 md:mb-12 lg:mb-16 xl:mb-[60px]">

  {{! Title }}
  <h2
    class="text-2.5xl font-bold tracking-tighter text-gray-900 before:text-accent before:content-['.'] dark:text-white sm:text-3.5xl md:text-4xl lg:text-[62px] lg:leading-none"
  >
    Stream Videos
  </h2>
  {{! Title / End }}

  {{! Layout Filter }}
  <div class="flex gap-4 sm:gap-8 items-baseline">
    {{! Layout }}
    <ul class="flex gap-4 sm:gap-8">
      {{#each streams-layout}}
      <li>
        <a class="group" href="{{slug}}.html">
          <svg
            role="img"
            class="w-5 sm:w-7.5 aspect-square {{#ifpage slug}} fill-accent dark:fill-accent {{/ifpage}} {{#unlesspage slug}} fill-gray-500 group-hover:fill-gray-900 transition-colors dark:fill-gray-650 dark:group-hover:fill-white {{/unlesspage}}"
          >
            <use xlink:href="{{root}}assets/img/str1/sprite.svg#{{icon}}"></use>
          </svg>
        </a>
      </li>
      {{/each}}
    </ul>
    {{! Layout / End }}

    {{! Filter }}
    <div class="relative">
      {{! Filter Toggle }}
      <button class="js-vv-streams-filter-toggle group peer">
        <svg
          role="img"
          class="w-5 sm:w-7.5 aspect-square {{#ifpage slug}} fill-accent dark:fill-accent {{/ifpage}} {{#unlesspage slug}} fill-gray-500 group-hover:fill-gray-900 transition-colors dark:fill-gray-650 dark:group-hover:fill-white {{/unlesspage}}"
        >
          <use xlink:href="{{root}}assets/img/str1/sprite.svg#filter"></use>
        </svg>
      </button>
      {{! Filter Toggle }}

      {{! Filter Dropdown }}
      <div class="absolute w-72 sm:w-80 opacity-0 peer-[.active]:opacity-100 transition-all invisible peer-[.active]:visible -translate-y-3 peer-[.active]:translate-y-0 flex flex-col gap-8 bg-white dark:bg-gray-700 p-6 sm:p-7.5 z-10 right-0 top-14 shadow-3xl">
        <div>
          {{#> _str1-form-select name="category" id="category" label="Category"}}
            <option value="-">All Categories</option>
            <option value="gaming">Gaming</option>
            <option value="twitch-streams">Twitch Streams</option>
            <option value="Unboxing">Unboxing</option>
            <option value="Devices">Devices</option>
            <option value="other">Other</option>
          {{/_str1-form-select}}
        </div>
        <div>
          {{#> _str1-form-select name="filter-by" id="filter-by" label="Filter By"}}
            <option value="date-uploaded">Date Uploaded</option>
            <option value="popular">Popular</option>
            <option value="most-liked">Most Liked</option>
          {{/_str1-form-select}}
        </div>
        <div>
          {{#> _str1-form-select name="order-by" id="order-by" label="Order By"}}
            <option value="descending">Descending</option>
            <option value="ascending">Ascending</option>
          {{/_str1-form-select}}
        </div>
        <div class="pt-1">
          {{#> _str1-btn
            is-btn="true"
            variant="primary"
            size="md"
            type="submit"
            class="w-full"
          }}
            Apply Filters
          {{/_str1-btn}}
        </div>
      </div>
      {{! Filter Dropdown / End }}
    </div>
    {{! Filter / End }}
  </div>
  {{! Layout Filter / End }}

</div>
{{! Title & Filter / End }}

{{! Categories }}
<nav>
  <ul class="flex flex-wrap gap-x-9 gap-y-2 text-lg font-bold mb-10 md:mb-16 lg:mb-[90px]">
    <li>
      <a class="text-accent dark:text-accent transition-colors" href="#">All Videos</a>
    </li>
    {{#each categories}}
      <li>
        <a class="text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent transition-colors" href="#">{{label}}</a>
      </li>
    {{/each}}
  </ul>
</nav>
{{! Categories / End }}
