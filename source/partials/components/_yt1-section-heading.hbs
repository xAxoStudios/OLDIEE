{{! Section Heading }}
<div
  class="mb-12 flex flex-col flex-wrap gap-y-6 sm:mb-16 md:mb-20 lg:mb-24 xl:mb-28 xl:gap-y-12 {{#if isCentered}}justify-center items-center{{else}}items-baseline justify-between sm:flex-row{{/if}}"
>
  <div
    class="flex flex-col-reverse gap-y-2 sm:gap-y-3 md:gap-y-4 lg:gap-y-5 xl:gap-y-6 {{#if isCentered}}items-center{{/if}}"
  >
    <h2
      class="leadin-none text-3xl font-bold tracking-tight text-primary dark:text-white sm:text-4xl md:text-5xl lg:text-6xl xl:text-6.5xl xl:leading-none"
    >{{{title}}}</h2>
    <div
      class="text-sm uppercase leading-tighter md:text-base"
    >{{subtitle}}</div>
  </div>

  {{#if ctaTxt}}
    {{! CTA Link }}
    <div
      class="inline-flex items-center gap-x-3 text-xs font-bold uppercase text-primary md:text-sm"
    >
      <span
        class="relative inline-flex h-[18px] w-[18px] items-center justify-center rounded-full border-2 border-primary dark:border-white"
      >
        <svg role="img" class="h-[8px] w-[8px] fill-primary dark:fill-white">
          <use xlink:href="{{root}}assets/img/yt1/sprite.svg#chevron-right"></use>
        </svg>
      </span>
      <a
        class="text-primary hover:text-accent dark:text-white dark:hover:text-accent"
        href="{{ctaUrl}}"
      >{{ctaTxt}}</a>
    </div>
    {{! CTA Link / End }}
  {{/if}}
</div>
{{! Section Heading / End }}
