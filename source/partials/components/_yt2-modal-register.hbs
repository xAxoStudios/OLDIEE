{{! Register Modal }}
{{#> _yt2-modal
  modal-id="vv-modal-register"
  modal-close-btn-id="vv-modal__close-btn-register"
  title="Register"
  desc="If you already have an account, <a class=\"text-accent hover:text-primary transition-colors\" href=\"#\">login</a> now to access your profile!"
}}

  {{! Default Form }}
  <form class="flex flex-col gap-y-7" action="#">
    <div class="group is-success">
      {{> _yt2-form-input
        type="email"
        name="user-email"
        id="user-email"
        placeholder="Enter Email"
        value="jspigel@yourmail.com"
      }}
    </div>
    <div class="group is-error">
      {{> _yt2-form-input
        type="password"
        name="user-password"
        id="user-password"
        placeholder="Enter Password"
        value="qwerty"
        notification="Password need to have at least one number"
      }}
    </div>
    <div>
      {{> _yt2-form-input
        type="password"
        name="user-password-repeat"
        id="user-password-repeat"
        placeholder="Repeat Password"
      }}
    </div>
    <div class="mt-3">
      {{#> _yt2-btn
        is-btn="true"
        variant="secondary"
        size="xl"
        type="submit"
        class="w-full"
      }}
        Create your Account!
      {{/_yt2-btn}}
    </div>
    <div class="text-sm leading-normal text-gray-500">
      <p>Youâ€™ll receive a confirmation email in your inbox with a link so you can activate your account. If you have any problems, <a class="text-accent hover:text-primary dark:hover:text-white transition-colors" href="_yt2-contact.html">contact us</a>!</p>
    </div>
  </form>
  {{! Default Form / End }}

{{/_yt2-modal}}
{{! Register Modal / End }}

