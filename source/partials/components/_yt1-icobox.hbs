{{! IcoBox }}
<div class="flex flex-col gap-y-6 md:gap-y-8">

  {{! Icon }}
  <div>
    <svg role="img" class="h-12 w-12 fill-primary dark:fill-white">
      <use xlink:href="{{root}}assets/img/yt1/sprite.svg#{{icon}}"></use>
    </svg>
  </div>
  {{! Icon / End }}

  {{! Title }}
  <h3
    class="text-xl font-bold text-primary dark:text-white md:text-2xl lg:mb-3 lg:text-3.5xl lg:leading-none lg:tracking-tight"
  >{{{title}}}</h3>
  {{! Title / End }}

  {{! Description }}
  <div class="lg:text-lg lg:leading-8 lg:tracking-tighter">
    {{desc}}
  </div>
  {{! Description / End }}
</div>
{{! IcoBox / End }}
