{{! Sponsors }}
<div class="flex flex-col gap-y-10 lg:gap-y-20">
  {{#each items}}
    <div class="grid grid-cols-12 gap-x-5 gap-y-9 md:gap-x-6 lg:gap-x-7.5">
      <div class="col-span-full pt-2 md:col-span-4 md:justify-self-center">
        <a href="{{link.url}}">
          <img
            class="hidden dark:block"
            src="{{root}}{{img.lg}}"
            alt="{{title}}"
          />
          <img class="block dark:hidden" src="{{root}}{{img.lg-dark}}" alt="" />
        </a>
      </div>
      <div class="col-span-full md:col-span-8">
        <div class="mb-3">{{desc}}</div>
        <a
          class="text-sm font-bold uppercase text-accent hover:text-gray-900 dark:hover:text-white"
          href="{{link.url}}"
        >{{link.label}}</a>
      </div>
    </div>
  {{/each}}
</div>
{{! Sponsors / End }}
