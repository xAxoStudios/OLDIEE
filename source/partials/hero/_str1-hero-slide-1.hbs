{{! Slides #1 }}
<div class="swiper-slide group">
  <div class="relative h-full w-full">
    <div class="container h-full">
      <div class="grid h-full grid-cols-12 gap-x-5 md:gap-x-6 lg:gap-x-7.5 place-items-center md:place-items-stretch">

        {{! Content }}
        <div class="col-span-10 col-start-2 self-center md:col-span-5 lg:col-start-2 text-center md:text-left">
          <div class="md:-ml-2 xl:-ml-3">
            <div
              class="-translate-x-6 text-5xl font-bold leading-none tracking-tighter text-white opacity-0 transition-all delay-[400ms] duration-700 group-[.vv-slide-played]:translate-x-0 group-[.swiper-slide-active:not(.vv-slide-played)]:translate-x-0 group-[.vv-slide-played]:opacity-100 group-[.swiper-slide-active:not(.vv-slide-played)]:opacity-100 md:text-6xl lg:text-8xl xl:text-9.5xl"
            >Neko</div>
            <div
              class="-mt-[0.1em] translate-x-8 text-6xl font-bold leading-none tracking-tighter text-accent opacity-0 transition-all delay-[550ms] duration-700 group-[.vv-slide-played]:translate-x-0 group-[.swiper-slide-active:not(.vv-slide-played)]:translate-x-0 group-[.vv-slide-played]:opacity-100 group-[.swiper-slide-active:not(.vv-slide-played)]:opacity-100 md:text-7xl lg:text-9xl xl:-mt-[0.22em] xl:text-10.5xl"
            >MaGiX</div>
          </div>
          <div class="mt-3 md:mt-1 xl:-mt-2.5 lg:pb-9 xl:pb-12">
            <div
              class="mb-7 translate-y-4 text-base font-medium leading-8 text-white opacity-0 delay-[650ms] duration-500 group-[.vv-slide-played]:translate-y-0 group-[.swiper-slide-active:not(.vv-slide-played)]:translate-y-0 group-[.vv-slide-played]:opacity-100 group-[.swiper-slide-active:not(.vv-slide-played)]:opacity-100 lg:mb-10 lg:text-lg xl:mb-12 xl:pr-20"
            >
              Join me every night at 8PM PCT on Twitch for the best retro game
              streams
            </div>
            {{#> _str1-btn
              variant="twitch"
              size="lg"
              class="w-full lg:w-[75%] xl:w-[55%] translate-y-4 opacity-0 transition-all delay-[750ms] duration-500 group-[.vv-slide-played]:translate-y-0 group-[.swiper-slide-active:not(.vv-slide-played)]:translate-y-0 group-[.vv-slide-played]:opacity-100 group-[.swiper-slide-active:not(.vv-slide-played)]:opacity-100"
            }}
              <svg class="h-4 w-4" fill="currentColor">
                <use xlink:href="{{root}}assets/img/social-icons.svg#twitch"></use>
              </svg>
              Subscribe Now!
            {{/_str1-btn}}
          </div>
        </div>
        {{! Content / End }}

        {{! Image }}
        <div class="col-span-6 col-start-7 hidden md:block">

          {{! Person }}
          <div
            class="scale-90 opacity-0 transition-all delay-300 duration-700 group-[.swiper-slide-active:not(.vv-slide-played)]:scale-100 group-[.vv-slide-played]:scale-100 group-[.vv-slide-played]:opacity-100 group-[.swiper-slide-active:not(.vv-slide-played)]:opacity-100 lg:absolute lg:bottom-0 xl:ml-6"
          >
            <img
              src="{{root}}assets/img/str1/samples/hero-streamer.png"
              alt=""
            />
          </div>
          {{! Person / End }}

        </div>
        {{! Image / End }}
      </div>
    </div>

    {{! Background Image - No decoration }}
    <div
      class="absolute inset-0 -z-10 bg-[url('../../../assets/img/str1/samples/hero-slide-1.jpg')] bg-cover bg-center bg-no-repeat opacity-0 transition-opacity duration-1000 ease-out group-[.swiper-slide-active]:opacity-100 md:hidden"
    ></div>
    {{! Background Image - No decoration / End }}

    {{! Background Image - With Decoration }}
    <div
      class="absolute inset-0 -z-10 hidden bg-[url('../../../assets/img/str1/samples/hero-slide-1-with-decoration.jpg')] bg-cover bg-center bg-no-repeat opacity-0 transition-opacity duration-1000 ease-out group-[.swiper-slide-active]:opacity-100 md:block"
    ></div>
    {{! Background Image - With Decoration / End }}
  </div>
</div>
{{! Slides #1 / End }}
