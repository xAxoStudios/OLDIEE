{{! Shopping Cart }}
<div class="grid grid-cols-12 content-start gap-x-6 gap-y-20 md:gap-x-7.5">

  {{! Cart }}
  <div class="col-span-full lg:col-span-8 lg:pr-[70px]">
    <h2
      class="mb-6 text-2xl font-bold text-primary dark:text-white md:text-3xl md:tracking-tight lg:mb-14 lg:text-3.5xl"
    >
      <span class="text-accent">3</span>
      Products in the Cart
    </h2>

    {{! Products }}
    <div class="relative overflow-x-auto mb-12 lg:mb-16">
      <table class="w-full table-auto">
        <thead class="text-sm font-bold uppercase leading-tight text-primary dark:text-white">
          <tr>
            <th class="py-4 pr-4 text-left">Product</th>
            <th class="py-4 px-4">Price</th>
            <th class="py-4 px-4">Quantity</th>
            <th class="py-4 px-4">Subtotal</th>
            <th class="py-4 pl-4"></th>
          </tr>
        </thead>
        <tbody class="text-center">
          {{#each yt1.shop.cart.products}}
            <tr>
              <td class="py-4 pr-4 text-left">
                <div class="flex gap-3 min-w-[260px]">
                  <!-- Thumb -->
                  <figure class="shrink-0">
                    <a class="group" href="{{url}}.html">
                      <img
                        class="transition-opacity duration-300 group-hover:opacity-75"
                        src="{{img.sm}}"
                        alt="{{title}}"
                      />
                    </a>
                  </figure>
                  <!-- Thumb / End -->
                  <!-- Product Body -->
                  <div class="flex flex-grow flex-col gap-1 leading-tight">
                    <!-- Category -->
                    <span
                      class="text-xs font-bold uppercase text-gray-300"
                    >{{category}}</span>
                    <!-- Category / End-->
                    <!-- Title -->
                    <h4 class="mb-[2px] font-bold">
                      <a
                        class="text-primary dark:text-white transition-colors hover:text-accent dark:hover:text-accent"
                        href="{{url}}.html"
                      >
                        {{title}}
                      </a>
                    </h4>
                    <!-- Title / End -->

                    {{! Rating }}
                    {{> _yt1-rating rating=rating rating-size="sm" }}
                    {{! Rating / End }}

                  </div>
                  <!-- Product Body / End -->
                </div>
              </td>
              <td class="py-4 px-4 font-bold text-primary dark:text-white">{{single-price}}</td>
              <td class="py-4 px-4">
                {{> _yt1-form-input type="number" name=id id=id width="w-20 lg:w-[120px]" size="md" value=quantity}}
              </td>
              <td class="py-4 px-4 font-bold text-primary dark:text-white">{{price}}</td>
              <td class="py-4">
                {{! Remove Button }}
                <button
                  class="group inline-flex h-5 w-5 items-center justify-center"
                >
                  <svg
                    role="img"
                    class="h-2 w-2 fill-primary transition-colors group-hover:fill-accent dark:fill-white dark:group-hover:fill-accent"
                  >
                    <use xlink:href="{{root}}assets/img/yt1/sprite.svg#close"></use>
                  </svg>
                </button>
                {{! Remove Button / End }}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{! Products / End }}

    {{! Cart Controls }}
    <div class="flex flex-wrap gap-2">
      <button class="bg-primary py-5 px-5 sm:px-7 lg:px-12 font-bold leading-tight tracking-tight text-white transition-colors hover:cursor-pointer hover:bg-primary/90">Update Cart</button>
      <button class="text-gray-500/60 py-5 px-5 sm:px-7 lg:px-12 font-bold leading-tight tracking-tight text-white transition-colors hover:cursor-pointer hover:text-primary dark:hover:text-white">Empty Cart</button>
    </div>
    {{! Cart Controls / End }}

    {{! Promo Code }}
    <div class="mt-16 lg:mt-28">
      <h2
        class="mb-6 text-2xl font-bold text-primary md:text-3xl md:tracking-tight lg:mb-14 lg:text-3.5xl dark:text-white"
      >
        Promo Code <span class="text-accent">3</span>
      </h2>
      <div class="flex flex-col md:flex-row gap-y-3">
        {{> _yt1-form-input type="text" name="cart-promo" id="cart-promo" placeholder="Enter your code here..." width="w-full md:w-[280px]" }}
        <button type="submit" class="bg-primary py-5 px-5 lg:px-12 font-bold leading-tight tracking-tight text-white transition-colors hover:cursor-pointer hover:bg-primary/90">Redeem Code</button>
      </div>
    </div>
    {{! Promo Code }}
  </div>
  {{! Cart / End }}

  {{! Order }}
  <div
    class="sticky top-8 col-span-full self-start bg-white py-5 px-5 tracking-tight shadow-3xl sm:px-6 md:px-6 md:py-6 lg:col-span-4 lg:py-7 lg:px-8 xl:py-9 xl:px-10 dark:bg-gray-800"
  >
    {{#with yt1.shop.cart}}

      {{! Order Calculation }}
      <div>
        <h3
          class="mb-8 text-xl font-bold leading-tight text-primary dark:text-white lg:mb-12 lg:text-1.5xl"
        >Your Order</h3>
        <div>
          {{! Cart Total }}
          <div
            class="mb-5 flex flex-wrap justify-between text-lg leading-tighter lg:text-base"
          >
            <h4>Cart Total</h4>
            <div class="font-bold text-primary dark:text-white">{{cart-total}}</div>
          </div>
          {{! Cart Total / End }}

          {{! Calculation }}
          <div
            class="mb-8 flex flex-col gap-y-5 text-sm leading-normal tracking-tighter lg:text-base"
          >
            {{#each calculation}}
              <div class="flex flex-wrap justify-between">
                <div>{{label}}</div>
                <div class="font-bold text-primary dark:text-white">{{value}}</div>
              </div>
            {{/each}}
          </div>
          {{! Calculation / End }}

          {{! Order Total }}
          <div
            class="mb-4 flex flex-wrap justify-between text-lg font-bold leading-tighter lg:mb-8"
          >
            <div class="text-primary dark:text-white">Total</div>
            <div class="text-accent">{{order-total}}</div>
          </div>
          {{! Order Total / End }}

          <input
            class="mt-6 block w-full bg-accent py-5 px-5 font-bold leading-tight tracking-tight text-white transition-colors hover:cursor-pointer hover:bg-accent/90 md:mt-14"
            type="submit"
            value="Proceed to Checkout"
          />
        </div>
      </div>
      {{! Order Calculation / End }}

    {{/with}}

  </div>
  {{! Order }}
</div>
{{! Shopping Cart / End }}
