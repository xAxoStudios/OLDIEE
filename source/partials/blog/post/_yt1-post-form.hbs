<div class="{{class}}">
  <h2 class="mb-10 text-3xl md:text-5xl font-bold leading-none tracking-tighter text-primary dark:text-white md:mb-20 lg:mb-28">
    Leave a Reply
  </h2>
  <form class="grid grid-cols-1 md:grid-cols-3 gap-7" action="#">
    <div class="md:col-span-3">
      {{> _yt1-form-textarea textarea-class="h-44 md:h-60" name="post-comment" id="post-comment" placeholder="Your Comment"}}
    </div>
    <div class="md:col-span-1">
      {{> _yt1-form-input type="text" name="post-name" id="post-name" placeholder="Name" }}
    </div>
    <div class="md:col-span-1">
      {{> _yt1-form-input type="email" name="post-email" id="post-email" placeholder="Email" }}
    </div>
    <div class="md:col-span-1">
      {{> _yt1-form-input type="url" name="post-website" id="post-website" placeholder="Website" }}
    </div>
    <div class="md:col-span-3">
      <input class="bg-accent font-bold text-white text-lg tracking-tight py-5 leading-normal mt-4 md:mt-8 hover:cursor-pointer hover:bg-accent/90 transition-colors block w-full" type="submit" value="Post Comment" />
    </div>
  </form>
</div>
