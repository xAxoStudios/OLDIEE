<div class="{{class}}">
  <h2 class="mb-8 text-xl font-bold text-gray-900 dark:text-white md:mb-12 md:text-2xl lg:mb-16 lg:text-3xl xl:mb-20 xl:text-4xl">
    Leave a Comment
  </h2>
  <form class="grid grid-cols-1 md:grid-cols-2 gap-7.5" action="#">
    <div class="col-span-full lg:col-span-1">
      {{> _str1-form-input type="text" name="post-name" id="post-name" label="Your Name" }}
    </div>
    <div class="col-span-full lg:col-span-1">
      {{> _str1-form-input type="email" name="post-email" id="post-email" label="Your Email" }}
    </div>
    <div class="col-span-full">
      {{> _str1-form-textarea textarea-class="h-40 md:h-48" name="post-comment" id="post-comment" label="Your Comment"}}
    </div>
    <div class="col-span-full lg:flex lg:justify-end">
      {{#> _str1-btn
        is-btn="true"
        variant="accent"
        size="md"
        type="submit"
        class="w-full lg:w-auto lg:basis-1/3"
      }}
        Post Comment
      {{/_str1-btn}}
    </div>
  </form>
</div>
