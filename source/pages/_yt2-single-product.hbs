---
page-title: "Single Product"
hide-page-title: true
layout: "yt2"
breadcrumbs: [
  {
    label: "Shop",
    link: "_yt2-shop-grid-3.html"
  },
  {
    label: "Contact"
  }
]
---

<section class="pt-12 pb-20 lg:pb-52 lg:pt-24">

  <div class="container">

    {{> _yt2-breadcrumbs breadcrumbs=breadcrumbs}}

    {{! Product Main }}
    {{#> _yt2-grid grid-class="gap-y-12"}}

      {{#with ../yt2.shop.product }}

        <div class="col-span-full md:col-span-6">
          {{! Product Slider }}
          {{> _yt2-product-slider }}
          {{! Product Slider / End }}
        </div>

        {{! Product Content }}
        <div class="col-span-full md:col-span-6 md:pl-4 lg:pl-6 xl:pl-10">

          {{! Product Info }}
          <div class="mb-10 md:mb-16 lg:mb-20 xl:mb-24">

            <div class="mb-6 md:mb-8 lg:mb-10">
              {{! Category }}
              {{#with (lookup ../../yt2.shop.categories cat_id)}}
                <div class="mb-3 text-sm font-bold uppercase leading-none text-gray-300">{{label}}</div>
              {{/with}}
              {{! Category / End }}

              <div class="flex justify-between mb-2 lg:mb-4">
                {{! Title }}
                <h2 class="text-2xl font-bold tracking-tight text-primary lg:text-3.5xl dark:text-white">
                  {{title}}
                </h2>
                {{! Title / End }}

                {{! Price }}
                <div class="text-2xl font-bold tracking-tight text-primary lg:text-3.5xl dark:text-white">
                  {{../../yt2.shop.currency}}{{price}}
                </div>
                {{! Price / End }}
              </div>

              {{! Rating }}
              {{> _yt2-rating rating=rating rating-size="lg"}}
              {{! Rating / End }}
            </div>

            {{! Excerpt }}
            <div class="mb-6 md:text-lg md:leading-8 tracking-tighter md:mb-8">
              {{excerpt}}
            </div>
            {{! Excerpt / End }}

            {{! Colors }}
            <div class="mb-8 md:mb-12">
              <h5 class="font-bold text-primary lg:text-lg tracking-tight mb-4 lg:mb-6 dark:text-white">Select Color</h5>
              <div class="flex gap-x-5 lg:gap-x-6">

                {{! Color: Primary }}
                {{> _yt2-form-checkbox-check
                  id="product-color-primary"
                  name="product-color"
                  class="text-primary bg-primary ring-primary"
                  isChecked="true"
                }}
                {{! Color: Primary / End }}

                {{! Color: Red }}
                {{> _yt2-form-checkbox-check
                  id="product-color-red"
                  name="product-color"
                  class="text-[#ff3d54] bg-[#ff3d54] ring-[#ff3d54]"
                }}
                {{! Color: Red / End }}

                {{! Color: Gray }}
                {{> _yt2-form-checkbox-check
                  id="product-color-gray"
                  name="product-color"
                  class="text-[#cbcade] bg-[#cbcade] ring-[#cbcade]"
                }}
                {{! Color: Gray / End }}

              </div>
            </div>
            {{! Colors / End }}

            {{! Options (Size, Quantity) }}
            <div class="flex gap-6 mb-9 lg:mb-[70px]">
              <div class="basis-3/5">
                {{#> _yt2-form-select name="product-size" id="product-size" }}
                  <option value="-">Select size</option>
                  {{#each sizes }}
                    <option value="{{option}}">{{label}}</option>
                  {{/each}}
                {{/_yt2-form-select}}
              </div>
              <div class="basis-2/5">
                {{> _yt2-form-input type="number" name="product-quantity" id="product-quantity" value="1" }}
              </div>
            </div>
            {{! Options (Size, Quantity) / End }}

            {{! Add To Cart }}
            <div class="flex mb-6 lg:mb-12">
              <input
                class="block bg-accent py-5 px-5 font-bold leading-none tracking-tight text-white transition-colors hover:cursor-pointer hover:bg-accent/90 lg:text-lg lg:leading-normal basis-full lg:basis-1/2"
                type="submit"
                value="Add to Cart"
              />
            </div>
            {{! Add To Cart / End }}

            {{! Social Share }}
            <div class="flex gap-3">
              <a
                href="#"
                class="relative flex w-10 h-10 items-center justify-center text-xs text-white transition-colors bg-social-facebook hover:bg-social-facebook/90"
              >
                <svg class="w-3 h-3" fill="currentColor">
                  <use xlink:href="{{root}}assets/img/social-icons.svg#facebook"></use>
                </svg>
              </a>
              <a
                href="#"
                class="relative flex w-10 h-10 items-center justify-center text-xs text-white transition-colors bg-social-twitter hover:bg-social-twitter/90"
              >
                <svg class="w-3 h-3" fill="currentColor">
                  <use xlink:href="{{root}}assets/img/social-icons.svg#twitter"></use>
                </svg>
              </a>
            </div>
            {{! Social Share / End }}

          </div>
          {{! Product Info / End }}

          {{! Product Tabs }}
          {{> _yt2-product-tabs specifications=specifications }}
          {{! Product Tabs / End }}

        </div>
        {{! Product Content / End }}

      {{/with}}

    {{/_yt2-grid }}
    {{! Product Main / End }}


  </div>
</section>
