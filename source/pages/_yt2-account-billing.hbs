---
page-title: "Billing Details"
layout: "yt2"
breadcrumbs: [
  {
    label: "Account",
    url: "_yt2-account"
  },
  {
    label: "Billing Details"
  }
]
---

<section class="pt-12 pb-20 lg:pb-52 lg:pt-24">
  <div class="container">

    {{> _yt2-account-nav nav=yt2.account }}

    {{! Billing Details }}
    <div>

      {{! Details Form }}
      <div class="grid grid-cols-1 sm:grid-cols-12 gap-7">
        <div class="col-span-full lg:col-span-4">
          {{> _yt2-form-input
            type="text"
            name="billing-first-name"
            id="billing-first-name"
            placeholder="First Name"
          }}
        </div>
        <div class="col-span-full lg:col-span-4">
          {{> _yt2-form-input
            type="text"
            name="billing-last-name"
            id="billing-last-name"
            placeholder="Last Name"
          }}
        </div>
        <div class="col-span-full lg:col-span-4">
          {{> _yt2-form-input
            type="email"
            name="billing-email"
            id="billing-email"
            placeholder="Email"
          }}
        </div>
        <div class="col-span-full lg:col-span-4">
          {{> _yt2-form-input
            type="tel"
            name="billing-phone"
            id="billing-phone"
            placeholder="Phone"
          }}
        </div>
        <div class="col-span-full lg:col-span-8">
          {{> _yt2-form-input
            type="text"
            name="billing-address"
            id="billing-address"
            placeholder="Full Address"
          }}
        </div>
        <div class="col-span-full lg:col-span-4">
          {{#> _yt2-form-select
            name="billing-country"
            id="billing-country"
          }}
            <option value="-">Select Country</option>
            <option value="0">United States</option>
            <option value="1">Italy</option>
            <option value="2">Spain</option>
            <option value="3">Germany</option>
          {{/_yt2-form-select}}
        </div>
        <div class="col-span-full lg:col-span-3">
          {{#> _yt2-form-select
            name="billing-state"
            id="billing-state"
          }}
            <option value="-">Select State</option>
            <option value="0">California</option>
            <option value="1">Texas</option>
            <option value="2">Florida</option>
            <option value="3">Alaska</option>
          {{/_yt2-form-select}}
        </div>
        <div class="col-span-full lg:col-span-3">
          {{#> _yt2-form-select
            name="billing-city"
            id="billing-city"
          }}
            <option value="-">Select City</option>
            <option value="0">New York</option>
            <option value="1">Chicago</option>
            <option value="2">San Francisco</option>
            <option value="3">San Diego</option>
          {{/_yt2-form-select}}
        </div>
        <div class="col-span-full lg:col-span-2">
          {{> _yt2-form-input
            type="number"
            name="billing-zip"
            id="billing-zip"
            placeholder="ZIP Code"
          }}
        </div>
        <div class="col-span-full">
          {{> _yt2-form-textarea
            textarea-class="h-44 md:h-60"
            name="billing-comments"
            id="billing-comments"
            placeholder="Additional Comments"
          }}
        </div>
        <div class="col-span-full lg:col-start-9 lg:col-span-4">
          {{#> _yt2-btn
            is-btn="true"
            variant="accent"
            size="xl"
            type="submit"
            class="w-full"
          }}
            Save Address
          {{/_yt2-btn}}
        </div>
      </div>
      {{! Details Form / End }}
    </div>
    {{! Billing Details / End }}

  </div>
</section>
